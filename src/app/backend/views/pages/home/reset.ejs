		<section class="section">
<% if (check === true) { -%>
			<form class="form" action="<%= urlFormPost %>" method="post" autocomplete="off" spellcheck="false" noValidate>
				<div class="group-form">
					<a href="/panel" class="logo-form">&nbsp;</a>
				</div>

				<div class="group-form">
					<p class="title-form"><%= bodyTitle %></p>
				</div>

				<div class="group-form">
					<p class="description-form"><%- bodyDescription %></p>
				</div>

				<div class="group-form">
					<div class="custom-input" icon="true" passwordGenerate="true">
						<input class="text password _password-hide" id="input-password" type="text" name="password" placeholder="<%= placeholderPassword %>" required />
						<i class="icon fas fa-lock"></i>
						<label class="label" for="input-password"><%= labelPassword %></label>
						<i class="password-icon-show fas fa-eye" id="change-password"></i>
						<i class="password-icon-random fas fa-random" id="generate-password" title="<%= titleConfirmPasswordCopied %>"></i>
						<div class="password-progress-bar">
							<div class="password-progress-value"></div>
						</div>
					</div>
					<div class="status" id="status-password"></div>
				</div>

				<div class="group-form">
					<div class="custom-input" icon="true" passwordGenerate="true">
						<input value="" class="text password _password-hide" id="input-repeatPassword" type="text" name="repeatPassword" placeholder="<%= placeholderRepeatPassword %>" required />
						<i class="icon fas fa-lock"></i>					
						<label class="label" for="input-repeatPassword"><%= labelRepeatPassword %></label>
						<i class="password-icon-show fas fa-eye" id="change-password"></i>
						<i class="password-icon-random fas fa-random" id="generate-password" title="<%= titleConfirmPasswordCopied %>"></i>
						<div class="password-progress-bar">
							<div class="password-progress-value"></div>
						</div>
					</div>
					<div class="status" id="status-repeatPassword"></div>
				</div>				

				<div class="group-form">
					<img class="imgCaptcha" src="/panel/captcha" alt="" width="100%" height="50px">

					<div class="custom-input" icon="true">
						<input value="" class="text captcha" id="input-captcha" type="text" name="captcha" placeholder="<%= placeholderCaptcha %>" required />
						<i class="icon fas fa-robot"></i>
						<label class="label" for="input-captcha"><%= labelCaptcha %></label>
						<i class="captcha-icon fas fa-retweet" id="change-captcha"></i>
					</div>
					<div class="status" id="status-captcha"></div>
				</div>

				<input type="hidden" name="csrfToken" value="<%= csrfToken %>">

				<div class="group-form">
					<button class="button-default" type="submit"><%= formButton %></button>
				</div>

				<div class="group-form">
					<div class="status" id="status"></div>
				</div>

				<div class="group-form">
					<center><%- func.getArrayRedSocials("awesome-1", null, true, null, null, null) %></center>
				</div>
			</form>
<% } else { -%>
			<section class="box-form">
				<div class="group-form">
					<a href="/panel" class="logo-form">&nbsp;</a>
				</div>

				<div class="group-form">
						<p class="title-form"><%= bodyTitle %></p>
				</div>
				
				<div class="group-form status _danger">
					<%- htmlContent %>
				</div>

				<div class="group-form">
					<center><br><%- func.getArrayRedSocials("awesome-1", null, true, null, null, null) %></center>
				</div>
			</section>
<% } -%>
		</section>
